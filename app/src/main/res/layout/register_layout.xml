<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#3db2d7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="회원가입"
            android:id="@+id/textView3"
            android:layout_marginTop="53dp"
            android:textSize="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ID     "
            android:id="@+id/textView4"
            android:layout_marginBottom="28dp"
            android:layout_above="@+id/editText_reg_pw"
            android:layout_toLeftOf="@+id/editText_reg_id"
            android:layout_toStartOf="@+id/editText_reg_id" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_id"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/textView4"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PW     "
            android:id="@+id/textView5"
            android:layout_above="@+id/editText_reg_nick"
            android:layout_toLeftOf="@+id/editText_reg_id"
            android:layout_toStartOf="@+id/editText_reg_id"
            android:layout_marginBottom="24dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_pw"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="이름     "
            android:id="@+id/textView6"
            android:layout_marginBottom="23dp"
            android:layout_above="@+id/editText_reg_email"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_nick"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="폰번호"
            android:id="@+id/textView7"
            android:layout_marginBottom="148dp"
            android:textSize="22dp"
            android:layout_above="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_email"
            android:layout_alignBottom="@+id/textView7"
            android:background="#ffffff"
            android:layout_alignRight="@+id/editText_reg_nick"
            android:layout_alignEnd="@+id/editText_reg_nick"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:id="@+id/button4"
            android:onClick="onAppBtnClicked"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#3cb2d4"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_check"
            android:layout_above="@+id/button4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView11" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실명인증"
            android:id="@+id/button5"
            android:background="#3db2d4"
            android:textSize="13dp"
            android:layout_alignTop="@+id/editText_reg_jumin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/editText_reg_jumin"
            android:layout_toRightOf="@+id/editText_reg_email"
            android:layout_toEndOf="@+id/editText_reg_email" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중복확인"
            android:id="@+id/button7"
            android:background="#3db2d4"
            android:textSize="13dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/editText_reg_id"
            android:layout_alignBottom="@+id/editText_reg_id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="주민번호\n(&apos;-&apos;제외)"
            android:id="@+id/textView11"
            android:textSize="16dp"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/editText_reg_email"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_jumin"
            android:background="#ffffff"
            android:layout_alignTop="@+id/textView11"
            android:layout_alignLeft="@+id/editText_reg_email"
            android:layout_alignStart="@+id/editText_reg_email"
            android:layout_toStartOf="@+id/button7"
            android:layout_toLeftOf="@+id/button7" />

    </RelativeLayout>
</LinearLayout>
