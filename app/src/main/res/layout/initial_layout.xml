<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onNewClicked"
        android:background="#3db2d7">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:id="@+id/imageView"
            android:background="@drawable/mainlogo"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/textView_check2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="I D"
            android:id="@+id/textView"
            android:layout_marginTop="55dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PW"
            android:id="@+id/textView2"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_pw"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/editText_id"
            android:layout_alignStart="@+id/editText_id"
            android:background="#ffffff"
            android:layout_alignTop="@+id/textView2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_id"
            android:layout_above="@+id/textView2"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:background="#ffffff"
            android:layout_alignTop="@+id/textView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:id="@+id/button"
            android:textStyle="bold"
            android:background="#ffffff"
            android:textSize="25dp"
            android:onClick="onLoginBtnClicked"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  회원가입  "
            android:id="@+id/button2"
            android:background="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:onClick="onRegBtnClicked"
            android:layout_alignTop="@+id/button"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID/PW찾기"
            android:id="@+id/button3"
            android:layout_alignTop="@+id/button2"
            android:textStyle="bold"
            android:background="#ffffff"
            android:textSize="17dp"
            android:onClick="onFindBtnClicked"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/textView_check2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>
