<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f4f4f4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="회원가입"
            android:id="@+id/textView3"
            android:layout_marginTop="65dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ID"
            android:id="@+id/textView4"
            android:layout_marginBottom="28dp"
            android:layout_above="@+id/editText_reg_pw"
            android:layout_toLeftOf="@+id/editText_reg_id"
            android:layout_toStartOf="@+id/editText_reg_id" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_id"
            android:layout_alignBottom="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PW"
            android:id="@+id/textView5"
            android:layout_above="@+id/editText_reg_nick"
            android:layout_toLeftOf="@+id/editText_reg_id"
            android:layout_toStartOf="@+id/editText_reg_id"
            android:layout_marginBottom="24dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_pw"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="닉네임"
            android:id="@+id/textView6"
            android:layout_marginBottom="23dp"
            android:layout_above="@+id/editText_reg_email"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_nick"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="이메일"
            android:id="@+id/textView7"
            android:layout_marginBottom="162dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/editText_reg_email"
            android:layout_toStartOf="@+id/editText_reg_email" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_reg_email"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/editText_reg_nick"
            android:layout_alignStart="@+id/editText_reg_nick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청"
            android:id="@+id/button4"
            android:layout_below="@+id/editText_reg_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:onClick="onAppBtnClicked" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_check"
            android:layout_alignBottom="@+id/button4"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />
    </RelativeLayout>
</LinearLayout>
